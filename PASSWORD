<!DOCTYPE html>
<html>
<head>
  <title>Login Password</title>
  <meta charset="UTF-8">
</head>
<body>
  <h2>Masukkan Password</h2>
  <input type="password" id="password" placeholder="Password">
  <button onclick="login()">Masuk</button>

  <script>
    function login() {
      const input = document.getElementById("password").value;
      const correct = "rahasia123"; // Ganti ini dengan password kamu

      if (input === correct) {
        document.body.innerHTML = "<h1>Selamat Datang!</h1><p>Ini halaman rahasia kamu.</p>";
      } else {
        alert("Password salah!");
      }
    }
  </script>
</body>
</html>
